[gd_scene load_steps=3 format=3]

[ext_resource type="FontFile" path="res://Assets/Fonts/CormorantGaramond.ttf" id="1_font"]

[sub_resource type="GDScript" id="GDScript_health"]
script/source = "extends CanvasLayer

@onready var fill: ColorRect = $HealthBar/Fill
var player: Node = null

func _process(_delta: float) -> void:
	if not player:
		var players := get_tree().get_nodes_in_group(\"player\")
		if players.size() > 0:
			player = players[0]
	if player and player.has_method(\"get_health\"):
		var health = player.get_health()
		var max_health = player.max_health
		var ratio = float(health) / float(max_health)
		fill.anchor_right = ratio
	$FPSLabel.text = \"FPS: \" + str(Engine.get_frames_per_second())
"

[node name="HealthUI" type="CanvasLayer"]
script = SubResource("GDScript_health")

