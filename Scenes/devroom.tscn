[sub_resource type="GDScript" id="GDScript_test_interact"]
script/source = "extends Interactable

@export var message: String = \"¡Interacción!\"

func _ready() -> void:
	super._ready()
	interacted.connect(_on_interact)

func _on_interact() -> void:
	var dialogs := get_tree().get_nodes_in_group(\"dialog\")
	if dialogs.size() > 0:
		var dialog = dialogs[0]
		if not dialog.is_active:
			dialog.show_dialog(message)
"

